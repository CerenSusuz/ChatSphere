<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" />
    </Found>
    <NotFound>
        <LayoutView>
            <p class="text-red-500 text-center mt-10">⚠️ Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
