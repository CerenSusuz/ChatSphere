@page "/login"
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Login - ChatSphere</PageTitle>

<div class="form-container">
    <div class="form-card">
        <h2 class="form-title">Welcome Back!</h2>
        <p class="form-subtitle">Login to your account</p>

        <div class="form-group">
            <input @bind="Email" placeholder="Email" class="form-input" />
        </div>

        <div class="form-group">
            <input @bind="Password" type="password" placeholder="Password" class="form-input" />
        </div>

        <button @onclick="HandleLogin" class="form-button">Login</button>
        <p class="error-message">@ErrorMessage</p>

        <div class="form-footer">
            <p>Don't have an account? <a href="/register" class="form-link">Register here</a></p>
        </div>
    </div>
</div>

@code {
    private string Email { get; set; } = "";
    private string Password { get; set; } = "";
    private string ErrorMessage { get; set; } = "";

    private async Task HandleLogin()
    {
        var success = await AuthService.LoginAsync(Email, Password);

        if (success)
        {
            Navigation.NavigateTo("/chathub");
        }
        else
        {
            ErrorMessage = "Invalid email or password.";
        }
    }
}
