@page "/login"
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Login - ChatSphere</PageTitle>

<div class="form-wrapper">
    <div class="form-box">
        <h2 class="form-title">Login to ChatSphere</h2>
        <p class="form-subtitle">Access your account</p>

        <input @bind="Email" placeholder="Email" />
        <input @bind="Password" type="password" placeholder="Password" />
        <button @onclick="HandleLogin" class="form-button">Login</button>

        <p class="error-message">@ErrorMessage</p>

        <div class="link">
            Don't have an account? <a href="/register">Register here</a>
        </div>
    </div>
</div>

@code {
    private string Email { get; set; } = "";
    private string Password { get; set; } = "";
    private string ErrorMessage { get; set; } = "";

    private async Task HandleLogin()
    {
        var token = await AuthService.LoginAsync(Email, Password);
        if (!string.IsNullOrWhiteSpace(token))
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            ErrorMessage = "Invalid email or password.";
        }
    }
}
